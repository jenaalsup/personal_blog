<div id="page-content">
  <h1 class="text-center mt-2">Tags</h1>

  <div id="blog-posts" class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 mt-3">
        <div id="tag-cards" class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <% i = 0 %>
            <% @categories.each do |category| %>
              <% if i == 0 %>
                <%= link_to category.name, category_path(category), class: "btn btn-outline-secondary" %>
                <% i = i + 1 %>                
              <% else %>
                <hr>
                <%= link_to category.name, category_path(category), class: "btn btn-outline-secondary" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<footer id="sticky-footer" class="py-4 bg-white text-black">
  <div class="container text-center">
    <small>Copyright &copy; 2020 Plant Based Teen</small>
  </div>
</footer>