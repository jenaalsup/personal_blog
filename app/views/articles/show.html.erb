<div id="page-content">

  <div id="blog-posts" class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 mt-5">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h1 class="card-title"><%= @article.title %></h1>
            <h6 class="card-date font-italic"><%= @article.created_at.strftime("%B %d, %Y") %></h6>
            <hr>
            <p class="card-full-text text-left"><%= @article.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer id="sticky-footer" class="py-4 bg-white text-black">
  <div class="container text-center">
    <small>Copyright &copy; 2020 Plant Based Teen</small>
  </div>
</footer>